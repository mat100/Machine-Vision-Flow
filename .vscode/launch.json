{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug: Python Backend Only",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "main:app",
        "--reload",
        "--host=0.0.0.0",
        "--port=8000"
      ],
      "cwd": "${workspaceFolder}/python-backend",
      "env": {
        "MV_CONFIG_FILE": "${workspaceFolder}/python-backend/config.dev.yaml"
      },
      "jinja": true,
      "justMyCode": false
    },
    {
      "name": "Debug: Full Stack (Python + Node-RED)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "main:app",
        "--reload",
        "--host=0.0.0.0",
        "--port=8000"
      ],
      "cwd": "${workspaceFolder}/python-backend",
      "env": {
        "MV_CONFIG_FILE": "${workspaceFolder}/python-backend/config.dev.yaml"
      },
      "jinja": true,
      "justMyCode": false,
      "preLaunchTask": "Start Node-RED",
      "postDebugTask": "Stop Node-RED"
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/python-backend",
      "justMyCode": true
    },
    {
      "name": "Python: Pytest Current File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-v"
      ],
      "cwd": "${workspaceFolder}/python-backend",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/",
        "-v"
      ],
      "cwd": "${workspaceFolder}/python-backend",
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
